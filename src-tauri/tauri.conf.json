{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "modbus-visualizer",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "fs": {
        "all":true,
        "scope": ["**"]
      },
      "dialog": {
        "open": true,
        "save": true,
        "message": true
      },
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      }
    },
    "bundle": {
      "windows": {
        "wix": {
          "language": "zh-CN"
        }
      },
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.modbus-monitor",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "modbus.toml",
        "参数模板.xlsx"
      ]
    },
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline'"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "modbus-monitor",
        "width": 1000,
        "height": 680,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false
      }
    ]
  }
}
